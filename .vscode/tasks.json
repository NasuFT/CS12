{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "'trash.exe < main2.in > main2.out'",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["compile"]
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main2.cpp",
                "-o",
                "trash.exe"
            ],
            "group": "build"
        }
    ]
}